#!/usr/bin/env groovy
import hudson.model.*
pipeline {
   agent none
   stages {
      stage('Check Parameter') {
      script { 
                    properties([
                        parameters([
                            
                           string(
                                defaultValue: 'scripttodelete', 
                                name: 'ScriptName', 
                                trim: true
                            ),
							 string(
                                defaultValue: '1', 
                                name: 'startBuild', 
                                trim: true
                            ),
							 string(
                                defaultValue: '10', 
                                name: 'endBuild', 
                                trim: true
                            )
                           
                        ])
                    ])
                }
      }
        stage('Cleanup afterwards') {
            // cleanup logic
            steps {
             script {
               jobsToDelete = ["<JOB_TO_DELETE"]
               deleteJob(Hudson.instance.items, jobsToDelete)
           }
            }
        }
   }
 
}

def deleteJob(items, jobsToDelete) {
    items.each { item ->
      if (item.class.canonicalName != 'com.cloudbees.hudson.plugins.folder.Folder') {
        if (jobsToDelete.contains(item.fullName)) {
          manager.listener.logger.println(item.fullName)
          item.delete()
        }
      }
    }
}
